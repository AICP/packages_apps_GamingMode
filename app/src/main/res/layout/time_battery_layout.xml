<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:format12Hour="h:mm"
        android:format24Hour="H:mm" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/time_battery_margin_horizontal"
        android:format12Hour="@string/date_format"
        android:format24Hour="@string/date_format" />

    <TextView
        android:id="@+id/current_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end" />

</LinearLayout>