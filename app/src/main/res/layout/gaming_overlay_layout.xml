<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.Settings">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gaming_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_background"
        android:padding="16dp">

        <TextClock
            android:id="@+id/time_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format12Hour="h:mm"
            android:format24Hour="H:mm"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextClock
            android:id="@+id/date_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="@dimen/time_battery_margin"
            android:format12Hour="@string/date_format"
            android:format24Hour="@string/date_format"
            app:layout_constraintStart_toEndOf="@id/time_view"
            app:layout_constraintBaseline_toBaselineOf="@id/time_view" />

        <org.exthmui.game.ui.BatteryView
            android:id="@+id/battery_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/time_battery_margin"
            app:layout_constraintStart_toEndOf="@id/date_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/time_view"
            app:layout_constraintHorizontal_bias="1" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/status_bar_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="time_view, date_view, battery_view" />

        <HorizontalScrollView
            android:id="@+id/qs_view_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:scrollbars="none"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/status_bar_barrier">

            <org.exthmui.game.ui.QuickSettingsView
                android:id="@+id/quick_settings_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </HorizontalScrollView>

        <View
            android:id="@+id/qs_divider"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="8dp"
            android:background="#7DFFFFFF"
            app:layout_constraintEnd_toEndOf="@id/qs_view_container"
            app:layout_constraintStart_toStartOf="@id/qs_view_container"
            app:layout_constraintTop_toBottomOf="@id/qs_view_container" />

        <HorizontalScrollView
            android:id="@+id/qs_app_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingBottom="4dp"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/qs_divider">

            <org.exthmui.game.ui.QuickStartAppView
                android:id="@+id/quick_start_app_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" />
        </HorizontalScrollView>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/quick_start_app_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="qs_divider, qs_app_container"/>

        <org.exthmui.game.ui.GamingPerformanceView
            android:id="@+id/performance_controller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/qs_app_container" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
